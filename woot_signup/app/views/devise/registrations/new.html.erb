<div class="container">
  <div class="">
    <h4>Inscripción</h4>
  </div>
  <%= devise_error_messages! %>


  <div class="row ">
    <div class="col offset-l7 z-depth-1">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :id => "form"} )  do |f| %>
        <div class="input-field col s12 m6 l6">
          <i class="material-icons prefix">person</i>
          <%= f.text_field :first_name,  required:"", 'aria-required':"true", class: 'validate'%>
          <%= f.label :first_name, for: 'icon_prefix', id: "user_first_name" %>

        </div>
        <div class="input-field col s12 m6 l6">
          <i class="material-icons prefix">account_circle</i>
          <%= f.text_field :last_name, required:"", 'aria-required':"true", class: 'validate' %>
          <%= f.label :Apellido, for: 'icon_prefix', id: "user_last_name"  %>
        </div>

        <div class="input-field col s12 m12 l12">
          <i class="material-icons prefix">dns</i>
          <%= f.text_field :document,  required:"", 'aria-required':"true", class: 'validate' %>
          <%= f.label :RUT, for: 'icon_prefix', id: "user_document" %>
        </div>
        <div class="input-field col s12 m12 l12">
          <i class="material-icons prefix">email</i>
          <%= f.email_field :email, id: 'icon_prefix', class: 'validate' %>
          <%= f.label :email, for: 'icon_prefix', 'data-error': "error" %>
        </div>
        <div class="input-field col s12 m12 l12">
          <i class= "material-icons prefix">contact_mail</i>
          <%= f.label :Confirmación_email, for: 'icon_prefix' %>
          <%= f.email_field :email, id: 'icon_prefix', autocomplete: "off", class: 'validate', 'data-error': "error" %>
        </div>
        <div class="input-field col s12 m6 l6">
          <i class= 'material-icons prefix'>event</i>
          <%= f.label :Fecha_de_nacimiento, for: 'icon_prefix' %>
          <%= f.text_field :dob, class: 'datepicker', id: 'icon_prefix' %>
        </div>
        <div class="input-field col s12 m6 l6">
          <i class='material-icons prefix'>phone_iphone</i>
          <%= f.label :Número_de_teléfono, for: 'icon_prefix' %>
          <%= f.text_field :phone_number, id: 'icon_prefix' %>
        </div>
        <div class="field">
          <%= f.hidden_field :balance, value: 0 %>
        </div>

        <div class="input-field col s12 m6 l6">
          <i class='material-icons prefix'>lock</i>
          <%= f.label :clave, for: 'icon_prefix' %>
          <%= f.password_field :password, id: 'icon_prefix', autocomplete: "off" %>
        </div>
        <div class="input-field col s12 m6 l6">
          <i class='material-icons prefix'>vpn_key</i>
          <%= f.label :Confirmación_clave, for: 'icon_prefix' %>
          <%= f.password_field :password_confirmation, id: 'icon_prefix', autocomplete: "off" %>
        </div>

        <div class="actions col s12 m12 l12">
          <%= button_tag( :class => "btn waves-effect waves-light", :type => :submit) do %>
            OK <i class="material-icons right">send</i>
          <% end %>
        </div>


      <% end %>


    </div>
  </div>

</div>
